datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  //the “@” symbol is used to denote attributes which help define constraints, default values, relationships, and other database-specific configurations.
  id             String  @id @default(uuid())  // uuid(Universally unique identifier)
  username       String  @unique
  imageUrl       String  @db.Text
  externalUserId String  @unique
  bio            String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
